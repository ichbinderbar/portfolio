---
permalink: /blog/feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>Juan Idrovo Blog</title>
  <subtitle>Thoughts on compliance, security, legal tech, and building secure digital solutions.</subtitle>
  <link href="https://juanidrovo.com/blog/feed.xml" rel="self" type="application/atom+xml"/>
  <link href="https://juanidrovo.com/blog/" rel="alternate" type="text/html"/>
  <updated>{{ collections.posts | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  <id>https://juanidrovo.com/blog/</id>
  <author>
    <name>Juan Idrovo</name>
    <email>idrovel@gmail.com</email>
  </author>
  {%- for post in collections.posts | reverse %}
  {% set absolutePostUrl = "https://juanidrovo.com" + post.url %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ absolutePostUrl }}" rel="alternate" type="text/html"/>
    <id>{{ absolutePostUrl }}</id>
    <published>{{ post.date | dateToRfc3339 }}</published>
    <updated>{{ (post.data.lastModified or post.date) | dateToRfc3339 }}</updated>
    {%- if post.data.description %}
    <summary>{{ post.data.description }}</summary>
    {%- endif %}
    <content type="html">{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}</content>
    <author>
      <name>Juan Idrovo</name>
    </author>
  </entry>
  {%- endfor %}
</feed>
